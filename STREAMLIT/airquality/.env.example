# ============================================================
# EXAMPLE ENV FILE - Air Quality Project
# ============================================================
# Copiez ce fichier vers .env et remplissez les valeurs
# ⚠️ IMPORTANT: Ne jamais commiter le fichier .env réel!
# ============================================================

# ============================================================
# JWT & AUTHENTIFICATION
# ============================================================
# Générez avec: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=votre_jwt_secret_a_generer
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Session
SESSION_TTL_SECONDS=3600

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_SECONDS=900
RATE_LIMIT_REGISTER_ATTEMPTS=3
RATE_LIMIT_REGISTER_WINDOW=3600

# Bcrypt
BCRYPT_ROUNDS=12

# ============================================================
# BASE DE DONNÉES
# ============================================================
DATABASE_URL=postgresql://user:password@localhost:5433/dbname

# ============================================================
# REDIS
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================
# API GOOGLE
# ============================================================
MAPS_TILE_API_KEY=votre_google_maps_api_key
GEOCODING_API_KEY=votre_google_geocoding_api_key
MAP_STATIC_API_KEY=votre_google_static_maps_api_key
MAP_GROUNDING_API_KEY=votre_google_grounding_api_key
STREET_VIEW_API_KEY=votre_google_street_view_api_key
STREET_VIEW_PUBLICH_API_KEY=votre_google_street_view_public_api_key
AIR_QUALITY_API_KEY_GOOGLE=votre_google_air_quality_api_key

# ============================================================
# AIR-QUALITY API
# ============================================================
AIR_QUALITY_API_KEY=your_air_quality_api_key_here

# ============================================================
# TEMPÉRATURE API
# ============================================================
TEMPERATURE_API_KEY=your_temperature_api_key

# ============================================================
# SECRETS INTERNES
# ============================================================
# Générez avec: python -c "import secrets; print(secrets.token_hex(32))"
SIGNALING_SECRET=votre_signaling_secret
INTERNAL_SECRET=votre_internal_secret

# ============================================================
# EMAIL SMTP
# ============================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=votre_email@gmail.com
SMTP_PASSWORD=votre_app_password_gmail
SMTP_FROM_NAME=AIR QUALITY
SMTP_FROM_EMAIL=votre_email@gmail.com

# ============================================================
# CONFIGURATION APPLICATION
# ============================================================
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO
